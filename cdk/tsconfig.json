{
  "extends": "@tsconfig/node20/tsconfig.json",
  "compilerOptions": {
    "rootDirs": [
      "src",
      "test"
    ],
    "outDir": "lib",
    "declaration": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "noEmit": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "resolveJsonModule": true,
    "stripInternal": true,
  },
  "include": [
    "src/**/*.ts",
    "test/**/*.ts"
  ],
  "exclude": [
    "cdk.out",
    "node_modules",
    "lib"
  ]
}