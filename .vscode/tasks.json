{
	"version": "2.0.0",
	"tasks": [
		{
            "command": "npx",
            "label": "tsc",
            "type": "shell",
            "args": [
				"tsc",
                "-w",
                "-p",
                "."
            ],
			"options": {
				"cwd": "${workspaceFolder}/cdk/"
			},
            "isBackground": true,
            "problemMatcher": "$tsc-watch",
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            }
        }
	]
}